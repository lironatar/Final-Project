<div>
    <h4 id="here" style="text-align: center; font-size:44px; margin-bottom:-100px;">{{title}}</h4>
    <div class="container flex" style="font-size: 20px; margin-top:-5%;">
    {{#each Images}}
        <div class="card" style="width:308px; height:530px; margin:10px; overflow:hidden;">
            <div style="padding-top:40px; padding-bottom:30px;">
                <a href="/store/products/{{this.imageTitle}}#here" ><img class="ImagesInside" src="{{this.images}}" alt="" style="width:100%; height:240px;"></a>
            </div>
            <hr style="width:90%; margin:0 auto;">
            <div class="footer" style="width:100%; height:100%; text-align:right; padding-right:4.5%;">
                <h4>{{this.imageTitle}}</h4>
                <div class="row">
                    <div class="col-8">
                        <p>{{this.text}}</p>
                    </div>
                    <div class="col-4">
                        <p style="color:#3399ff; font-size:35px; text-align:center;">{{this.price}}&#8362</p>
                    </div>
                </div>
                <hr style="width:90%">
                <div class="row">
                    <div class="mx-auto">
                        <a class="btn btn-primary ImagesInside" href="/store/products/{{this.imageTitle}}#here" role="button">בחר מוצר<br>
                        <i class="fa fa-hand-pointer-o fa-lg" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
</div>
