{{#if product}}
    <div class="container-fluid" style="text-align: right; width:90%; height:100%">
        <div class="row">
            <div class="col-md-4" style="margin-right:5%">
                <div>
                    <img src="{{product.examplepics}}" style="width:200px; height:200px">
                </div>
                <div class="d-flex flex-row" style="margin-top:5px; width:50%">
                    <div class="p-2"><img src="{{product.examplepics}}" style="width:100px; height:100px"></div>
                    <div class="p-2"><img src="{{product.examplepics}}" style="width:100px; height:100px"></div>
                    <div class="p-2"><img src="{{product.examplepics}}" style="width:100px; height:100px"></div>
                </div>
            </div>
            <div class="col" style="max-height:100%">   
                <p>{{product.title}}</p>
                <p>{{product.text}}</p>
                <ul>
                    {{#each product.price}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <ul>
                    {{#each product.size}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    
{{else}}
<div style="background-color:burlywood; padding:20px;">
    <h4 style="text-align: right; margin-right:45%" > אין מוצר</h4>
</div>
{{/if}}
