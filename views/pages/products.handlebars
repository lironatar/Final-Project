{{#if product}}
<div class="container product">
    <div class="row justify-content-center align-content-center">
        <h3>{{product.subGalleryTitle}}</h3>
    </div>
    <br>
    <div class="row two" style="">
        <div class=" col-md-5">
            <!-- Bootstrap Carousel -->
           <div style="width:95%;" id="carouselExampleIndicators" class="carousel slide colone" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" style="background-color:black" data-slide-to="0" class="active"></li>
                        {{#each (carousel)}}
                            <li data-target="#carouselExampleIndicators" style="background-color:black" data-slide-to="{{this}}"></li>
                        {{/each}}
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{activePic}}" class="d-block w-100" alt="...">
                    </div>
                    {{#each product.pics}}
                        <div class="carousel-item">
                            <img src="{{this}}" class="d-block w-100" alt="...">
                        </div>
                    {{/each}}
                </div>
                <a class="carousel-control-prev color-carousel" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" style="" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next color-carousel" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-5 card cardMobile">
            <h4>בחר אפשרויות</h4>
            <div class="col">
                <form action="/store/products/{{product.subGalleryTitle}}" method="POST">
                    <div class="form-group">
                        <label for="Size">גודל</label>
                        <select class="form-control" name="size" id="Size">
                            {{#each product.size}}
                            <option>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="pic" id="pic" value="{{activePic}}">
                        <input type="hidden" name="id" id="id" value="{{product._id}}">
                    </div>
                    <div class="form-group">
                        <label for="Quantity">כמות</label>
                        <select class="form-control" name="quantity" id="Quantity">
                            {{#each product.quantity}}
                            <option>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{#if product.sides}}
                    <div class="form-group">
                        <label for="Sides">בחר אפשרות</label>
                        <select class="form-control" id="options" name ="options">
                            {{#each product.options}}
                            <option>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/if}}
                    <div class="row form-group" style="margin: 10% 0 2% 0; color:rgb(11, 181, 248)">
                        <div class="col" style="font-size:35px;">
                            <label for="price">{{product.price}} &#8362 </label>
                            <input type="hidden" value="{{product.price}}" id="price" name="price"></input>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary">קנה עכשיו <i
                                class="fa fa-cart-plus" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br>
</div>
{{else}}
<div style="background-color:burlywood; padding:20px;">
    <h4 style="text-align: right; margin-right:45%" > אין מוצר</h4>
</div>
{{/if}}
