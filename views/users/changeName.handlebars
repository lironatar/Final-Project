<div class="row accountPage">
    <div class="col sm-4 userSection ">
        <div>
            <h5  style="text-transform: capitalize">שלום {{user.fname}} {{user.lname}}</h5>
        </div>
        <div>
            <li><a href="/profile">פרטי חשבון <i class="fa fa-md fa-user"></i></a></li>
        </div>
        <div>
            <li><a href="/profile/changeName">שינוי שם <i class="fa fa-id-badge" aria-hidden="true"></i></a></li>
        </div>
        <div>
            <li><a href="/profile/changeMail">שינוי מייל <i class="fa fa-md fa-envelope"></i></a></li>
        </div>
        
        <div>
            <li><a href="/profile/changePass"> שינוי סיסמה <i class="fa fa-md fa-key"></i></a></li>
        </div>
        <div>
            <li><a href="/logout">יציאה <i class="fa fa-md fa-sign-out"></i></a></li>
        </div>
    </div>
    <div class="col sm-8 userActionSection">
        <div style="margin-right:40%; margin-bottom:1.5%"><i class="fa fa-id-badge fa-2x" aria-hidden="true"></i></i></div>
        <h5>שם נוכחי</h5>
        <div><p>{{user.fname}} {{user.lname}}</p></div>
        <form action="/profile/changeName" method="POST">
            <div class="form-group">
                
                <label for="fname">שינוי שם פרטי</label>
                <input type="text" name="fname" class="form-control" style="border-width:2px">
                <label for="lname">שינוי שם משפחה</label>
                <input type="text" name="lname" class="form-control" style="border-width:2px">
                <br>
                <small>*מותר לשנות שדה אחד או יותר</small>
                <label for="password">הכנס סיסמה נוכחית</label>
                <input type="password" name="password" class="form-control" required=""  style="border-width:2px">
                <div>
                    <button class="btn btn-primary" type="submit" style="margin-top: 4%">לשינוי השם <i class="fa fa-user-o" aria-hidden="true"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>